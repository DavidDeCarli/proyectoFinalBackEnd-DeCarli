{{#if admin}}
    <h3>Éstos son los productos más caros</h3>
    {{> expensiveProducts}}
    <br>
    <h3>Éstos son los productos más económicos</h3>
    {{> economicProducts}}
{{/if}}

{{#if mostrarProductos}}
    <div style="display: flex; flex-wrap: wrap; padding: 5px; background-color: darkslategrey;">
        {{#each products}}
            <div>
                <div style="height: 250px; width: 250px; margin: 16px;">
                    <img src={{this.imagen}} alt={{this.id}} style="width: 100%; min-height: 100%; max-height: 100%; border-radius: 25px;">
                </div>
                <h4 style="font-family: monospace; text-align: center; font-size: large; color: whitesmoke;">{{this.nombre}}</h4>
            </div>
        {{/each}}
    </div>
{{/if}}